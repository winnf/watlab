<div class="abstract-table-box" style="height: 100%; margin-top: 72px;">
	<div class="panel panel-default" style="padding: 0px 12px;">
		<div style="height: 64px;">
	  	<h2 style="float: left; display: inline-block;">{{title}}</h2>
	  	<button type="button" class="btn btn-primary" ng-click="clickHandlerMap['button']()" 
	  					style="float: right; display: inline-block; margin-top: 20px;"> 
	  		<i class="fa fa-plus" aria-hidden="true"></i>
	  		<span style="margin-left: 8px;">{{buttonText}}</span></button>
	  </div>
	  <div style="margin-bottom: 24px;">
		  <p style="margin-bottom: 12px;">{{description}}</p>
		  <table id="abstract-table" class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th ng-repeat="rowHeader in rowHeaders">{{rowHeader}}</th>
		      </tr>
		    </thead>
		    <tbody>
		      <tr ng-repeat="row in rows track by $index">
		        <td ng-repeat="(key, value) in row.viewableData" ng-include="cellTypes[$index % cellTypes.length]">
		      </tr>
		    </tbody>
		  </table>
		 </div>
	</div>
</div>